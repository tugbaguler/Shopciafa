<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/btn_delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:background="@color/colorAccent"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/product_image_wishlist_items"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/product_image_wishlist_items"
        app:srcCompat="@mipmap/bin" />


    <ImageView
        android:id="@+id/product_image_wishlist_items"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/deal_product_1" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#FDFDFD"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@+id/product_title_wishlist_items"
        app:layout_constraintTop_toBottomOf="@+id/product_title_wishlist_items">

        <ImageView
            android:id="@+id/star_imageView"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:src="@mipmap/star" />

        <TextView
            android:id="@+id/rating_of_product_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.7"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/total_ratings_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="(27) ratings"
            android:textColor="@color/colorDarkGrey"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/price_befor_discount_wishlist_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="75.50$"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/product_price_wishlist_items"
        app:layout_constraintStart_toEndOf="@+id/product_price_wishlist_items"
        app:layout_constraintTop_toTopOf="@+id/product_price_wishlist_items" />

    <TextView
        android:id="@+id/product_title_wishlist_items"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="US Polo Assn Sneakers"
        android:textColor="#333333"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/product_image_wishlist_items"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/payment_method_wishlist_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Cash on delivery avaliable"
        android:textColor="@color/colorDarkGrey"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/product_image_wishlist_items"
        app:layout_constraintStart_toStartOf="@+id/product_price_wishlist_items"
        app:layout_constraintTop_toBottomOf="@+id/product_price_wishlist_items" />

    <TextView
        android:id="@+id/product_price_wishlist_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="59,90$"
        android:textColor="#333333"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/product_image_wishlist_items"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <View
        android:id="@+id/price_divider_wishlist_items"
        android:layout_width="85dp"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="@+id/price_befor_discount_wishlist_items"
        app:layout_constraintStart_toEndOf="@+id/product_price_wishlist_items"
        app:layout_constraintTop_toTopOf="@+id/price_befor_discount_wishlist_items"
        app:layout_constraintVertical_bias="0.523" />

    <View
        android:id="@+id/divider10"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/payment_method_wishlist_items" />
</androidx.constraintlayout.widget.ConstraintLayout>