<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="16dp"
    android:paddingTop="35dp"
    tools:context=".UpdatePasswordFragment">


    <EditText
        android:id="@+id/update_password_old_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="8dp"
        android:hint="Enter the old password"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/colorPrimary"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/update_password_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter the new password"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/colorPrimary"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/update_password_new_password_again"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Confirm the new password"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/colorPrimary"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btn_update_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorAccent"
        android:text="UPDATE"/>
</LinearLayout>