<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/slider_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/deal_product_1" />

    <LinearLayout
        android:id="@+id/btn_remove_item_from_card"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="#fe6d73"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_image">

    </LinearLayout>

    <TextView
        android:id="@+id/last_price_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="59.90$"
        android:textColor="#333333"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@+id/card_items_product_title_textView"
        app:layout_constraintTop_toBottomOf="@+id/card_items_product_title_textView" />

    <TextView
        android:id="@+id/price_before_discount_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:text="75.50"
        android:textColor="#AAAAAA"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/last_price_textView"
        app:layout_constraintStart_toEndOf="@+id/last_price_textView"
        app:layout_constraintTop_toTopOf="@+id/last_price_textView"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/quantity_textView"
        android:layout_width="86dp"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/slider_background"
        android:drawableEnd="@mipmap/arrow_down"
        android:drawablePadding="8dp"
        android:elevation="5dp"
        android:padding="5dp"
        android:text="Qty: 1"
        android:textColor="#333333"
        app:layout_constraintBottom_toBottomOf="@+id/product_image"
        app:layout_constraintEnd_toEndOf="@+id/divider3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/last_price_textView"
        app:layout_constraintTop_toBottomOf="@+id/last_price_textView" />

    <TextView
        android:id="@+id/card_items_product_title_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="US Polo Assn Sneaker"
        android:textColor="#333333"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/product_image"
        app:layout_constraintTop_toTopOf="@+id/product_image" />

    <TextView
        android:id="@+id/remove_item_textView"
        android:layout_width="125dp"
        android:layout_height="43dp"
        android:layout_weight="1"
        android:drawableEnd="@mipmap/bin_white"
        android:drawableTint="@color/colorAccent"
        android:gravity="center"
        android:text="Remove item"
        android:textColor="@color/colorAccent"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_remove_item_from_card"
        app:layout_constraintEnd_toEndOf="@+id/btn_remove_item_from_card"
        app:layout_constraintStart_toStartOf="@+id/btn_remove_item_from_card"
        app:layout_constraintTop_toTopOf="@+id/btn_remove_item_from_card" />

    <View
        android:id="@+id/divider3"
        android:layout_width="80dp"
        android:layout_height="1dp"
        android:layout_marginStart="12dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="@+id/last_price_textView"
        app:layout_constraintStart_toEndOf="@+id/last_price_textView"
        app:layout_constraintTop_toTopOf="@+id/last_price_textView"
        app:layout_constraintVertical_bias="0.538" />
</androidx.constraintlayout.widget.ConstraintLayout>