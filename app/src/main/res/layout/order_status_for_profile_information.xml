<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="16dp"
    android:background="@drawable/slider_background"
    android:elevation="3dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/current_order_status_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Current Order Status"
        android:textColor="#333333"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/current_order_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:src="@mipmap/deal_product_1"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/current_order_status_textView" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/current_order_image"
        app:layout_constraintTop_toBottomOf="@+id/current_order_image">

        <ImageView
            android:id="@+id/ordered_dot_indicator"
            android:layout_width="15dp"
            android:layout_height="15dp"
            app:tint="@color/colorLightGrey"
            android:src="@drawable/selected_dot"
            android:translationX="-2dp" />

        <ProgressBar
            android:id="@+id/ordered_packet_progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progressBackgroundTint="@color/colorLightGrey"
            android:layout_weight="1"
            android:progress="0"
            android:progressTint="@color/colorGreen"
            android:translationX="-8dp" />

        <ImageView
            android:id="@+id/packet_dot_indicator"
            android:layout_width="15dp"
            android:layout_height="15dp"
            app:tint="@color/colorLightGrey"
            android:src="@drawable/selected_dot"
            android:translationX="-10dp" />

        <ProgressBar
            android:id="@+id/packed_shipped_progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:progress="0"
            android:progressBackgroundTint="@color/colorLightGrey"
            android:progressTint="@color/colorGreen"
            android:translationX="-12dp" />

        <ImageView
            android:id="@+id/shipped_dot_indicator"
            android:layout_width="15dp"
            android:layout_height="15dp"
            app:tint="@color/colorLightGrey"
            android:src="@drawable/selected_dot"
            android:translationX="-14dp" />

        <ProgressBar
            android:id="@+id/shipped_delivery_progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:progress="0"
            android:progressBackgroundTint="@color/colorLightGrey"
            android:progressTint="@color/colorGreen"
            android:translationX="-16dp" />

        <ImageView
            android:id="@+id/delivered_dot_indicator"
            android:layout_width="15dp"
            android:layout_height="15dp"
            app:tint="@color/colorLightGrey"
            android:src="@drawable/selected_dot"
            android:translationX="-18dp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>